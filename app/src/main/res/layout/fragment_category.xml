<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryFragment">

    <LinearLayout
        android:id="@+id/menu_Category_bg"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#F3F4F7"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>

    <ImageView
        android:id="@+id/menu_Title_Img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/category_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_Title_Img">

        <TableRow
            android:id="@+id/menu_category_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_Title_Img">

            <ImageButton
                android:id="@+id/category_menu_noraebang"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="노래방"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/noraebang" />

            <ImageButton
                android:id="@+id/category_menu_pcbang"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="PC방"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pcbang" />

            <ImageButton
                android:id="@+id/category_menu_activity"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="액티비티"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/activity" />

            <ImageButton
                android:id="@+id/category_menu_hof"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="술집"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hof" />

            <ImageButton
                android:id="@+id/category_menu_cafe"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="카페"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cafe" />


        </TableRow>

        <TableRow
            android:id="@+id/menu_category_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_category_line1">

            <ImageButton
                android:id="@+id/category_menu_japanese"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="일식"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/japanese" />

            <ImageButton
                android:id="@+id/category_menu_bunsik"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="분식"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bunsik" />

            <ImageButton
                android:id="@+id/category_menu_chinese"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="중식"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chinese" />

            <ImageButton
                android:id="@+id/category_menu_fastfood"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="패스트푸드"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fastfood" />

            <ImageButton
                android:id="@+id/category_menu_korean"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="한식"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/korean" />

        </TableRow>

        <TableRow
            android:id="@+id/menu_category_line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_category_line2">

            <ImageButton
                android:id="@+id/category_menu_meat"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="고기집"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/meat" />

            <ImageButton
                android:id="@+id/category_menu_schoolhoneytip"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="학교꿀팁"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/schoolhoneytip" />

            <ImageButton
                android:id="@+id/category_menu_senpaiplay"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="선배추천(놀거리)"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/senpaiplay" />

            <ImageButton
                android:id="@+id/category_menu_senpaieat"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="선배추천(먹거리)"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/senpaieat" />

            <ImageButton
                android:id="@+id/category_menu_school"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="학교헤택"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/school" />
        </TableRow>

    </TableLayout>


    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/menu_Category_bg">

        <TextView
            android:id="@+id/recyclerview_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한식"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 바텀 시트에 표시할 뷰를 추가합니다. -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>